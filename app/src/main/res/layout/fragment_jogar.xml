<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tel"
    tools:context=".JogarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_gira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receiv_homem"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@color/purple_700"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Nome1"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/receiv_mulher"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#ff6f9c"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:text="Nome2"
                android:textSize="30sp"/>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_girar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/purple_500">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Girar"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/ic_autorenew_whit24"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>






</FrameLayout>